<Window x:Class="gitt.Uhanova"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gitt"
        mc:Ignorable="d"
        Title="Ukhanova" Height="450" Width="1400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="654*"></ColumnDefinition>
            <ColumnDefinition Width="373*"></ColumnDefinition>
            <ColumnDefinition Width="373*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <WpfPlot Grid.Column="0" Name="WpfPlot1"/>

        <StackPanel Grid.ColumnSpan="2" Margin="653,0,0,0" >
            <Button Margin ="10" Height="25px" x:Name="buttton_One" Click="buttton_One_Click" Background="#EDC1F5">ВВП</Button>
            <Button Margin ="10" Height="25px" x:Name="buttton_Two" Click="buttton_Two_Click" Background="#EDC1F5">ВНП</Button>
            <Label Content="Процент роста и падения:" />
            <TextBlock x:Name="textBlock_one" Margin ="10" Height="260" Background="#E8D3E6"></TextBlock>
        </StackPanel>

        <DataGrid x:Name="dataGrid_Table" Grid.Column="2">
        </DataGrid>
    </Grid>
</Window>
 
